
<div class="col-md-3">


  <%= render 'users/show', user:@user  %>
  
    <% @book.errors.full_messages.each do |message|%>
    error:<%= message%><br>
  <%end%>
  
  
  <%= render 'books/create', book:@book %>

</div>


<div class="col-md-8 offset-md-1">

  <h2>Books</h2>
  <table class="table table-hover">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>

    <% @books.each do |book|%>
     <% if book.user_id == @user.id %>
    <tr>
      <td><%= link_to (attachment_image_tag book.user, :profile_image, size: "40", fallback: "no_image.jpg"), user_path(book.user_id) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
      <%end%>
    <%end%>
  </table>

</div>
