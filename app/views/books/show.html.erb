<div class="col-md-3">

<%= render 'users/show', user:@user  %>
<%= render 'books/create', book:@book_new %>

</div>

<div class="col-md-8 offset-md-1">

<h2>Book detail</h2>
    <table class="table">
    <tr>
    <td><%= link_to (attachment_image_tag @book.user, :profile_image, size: "40", fallback: "no_image.jpg"), user_path(@user.id) %><br><%= link_to @book.user.name,user_path(@user.id)%></td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>

    <% if @book.user_id == current_user.id %>

    <td><%= link_to "Edit",edit_book_path(@book.id) %></td>
    <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？"%></td>


    <% end %>
    </tr>
    </table>
</div>
