
<div class="col-md-3">

<%= render 'users/show', user:@user  %>

<%= render 'books/create', book:@book %>
    <% @book.errors.full_messages.each do |message|%>
    error:<%= message%><br>
  <%end%>

</div>

<div class="col-md-8 offset-md-1">

<h2>Books</h2>
<table class="table">
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>body</th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book|%>
  <tr>
    <td><%= link_to (attachment_image_tag book.user, :profile_image, size: "40", fallback: "no_image.jpg"), user_path(book.user_id) %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body%></td>
  </tr>
    <%end%>
  </tbody>
</table>

</div>

